<h1><%= @contact.name %></h1>


<p>Email: <%= @contact.email %></p>

<a href="/contacts/<%= @contact.id %>/edit">Edit</a> |
<a href="/contacts/<%= @contact.id %>"
  data-confirm="You sure?"
  data-method="delete"
  rel="nofollow">Delete</a>
  
<p>Phones:</p>

<a href="/contacts/<%= @contact.id %>/phones/new">Add phone</a>

<ul>
  <% @contact.phones.each do |phone| %>
  <li class="nobullet">
    Phone: <%= phone.number %> |
    <a class="showlinks" href="/contacts/<%= @contact.id %>/phones/<%= phone.id %>/edit">Edit</a> |
    <a class="showlinks" href="/contacts/<%= @contact.id %>/phones/<%= phone.id %>"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow">Delete</a>
    </li>
    <% end %>
</ul>

<p><a href="/contacts">Return to contact listing</a></p>